{
  "name": "nodejs-rest-api-application",
  "version": "1.0.0",
  "description": "Node.js REST API Application",
  "main": "./dist/server.js",
  "scripts": {
    "start": "nodemon dist/server.js",
    "test": "mocha -r ts-node/register src/tests/**/*.spec.ts",
    "watch:test": "nodemon --watch src --ext ts --exec \"npm run test\"",
    "coverage": "nyc -r lcov -e .ts -x \"*.spec.ts\" npm run test",
    "pretest": "npm run build",
    "postinstall": "npm run build",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "build": "npm run lint && npm run clean && tsc",
    "clean": "rimraf dist",
    "watch:dev": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://patelg123@github.com/patelg123/nodejs-rest-api-application.git"
  },
  "keywords": [
    "Node.js",
    "API",
    "REST",
    "Express.js"
  ],
  "author": "Girish Patel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/patelg123/nodejs-rest-api-application/issues"
  },
  "homepage": "https://github.com/patelg123/nodejs-rest-api-application#readme",
  "dependencies": {
    "body-parser": "^1.20.1",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.13"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.47",
    "@types/mocha": "^7.0.2",
    "@types/mongodb": "^3.5.18",
    "@types/mongoose": "^5.7.21",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "chai": "^4.2.0",
    "eslint": "^7.0.0",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.3",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  }
}
